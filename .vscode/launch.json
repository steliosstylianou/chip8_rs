    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'practise'",
            "env": {"RUST_LOG": "debug"},
            "cargo": {
                "args": [
                    "build",
                    "--bin=practise",
                    "--package=practise"
                ],
                "filter": {
                    "name": "practise",
                    "kind": "bin"
                }
            },
            "args": ["--binary", "~/Downloads/pong.rom"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'practise'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=practise",
                    "--package=practise"
                ],
                "filter": {
                    "name": "practise",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}